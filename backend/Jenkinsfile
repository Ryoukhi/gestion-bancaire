pipeline {
    agent any
    tools {
        maven 'Maven'      // Configurez dans Global Tool Configuration
        jdk 'JDK17'        // Configurez dans Global Tool Configuration
    }
    environment {
        SONAR_HOST_URL = 'http://localhost:9000'
    }
    stages {
        stage('Checkout') { steps { echo 'Code source...'; checkout scm } }

        stage('Build') {
            steps {
                echo 'Compilation backend...'
                dir('backend') {  // ‚Üê CRITIQUE pour votre structure
                    bat 'mvn clean compile'
                }
            }
        }

        stage('Tests unitaires') {
            steps {
                dir('backend') {
                    echo 'Tests unitaires...'
                    bat 'mvn test'
                }
            }
            post {
                always {
                    dir('backend') {
                        junit '
