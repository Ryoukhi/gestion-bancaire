pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "krieger747/core-banking-app"
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        DOCKER_CREDENTIALS = 'dockerhub-credentials'
        SONAR_TOKEN = credentials('sonar-token')
    }
    
    tools {
        maven 'Maven3' // Nom configuré dans Jenkins Global Tool Configuration
        jdk 'JDK17'    // Nom configuré dans Jenkins Global Tool Configuration
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Récupération du code source...'
                git branch: 'main', 
                    url: 'https://github.com/Ryoukhi/gestion-bancaire.git'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Compilation du projet...'
                sh 'mvn clean package -DskipTests'
            }
        }
        
        stage('Tests unitaires') {
            steps {
                echo 'Exécution des tests...'
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        
        stage('Analyse SonarQube') {
            steps {
                echo 'Analyse de la qualité du code...'
                withSonarQubeEnv('SonarQube') {
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.projectKey=Core-banking \
                        -Dsonar.login=${SONAR_TOKEN}
                    '''
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                echo 'Vérification du Quality Gate...'
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'Construction de l\'image Docker...'
                script {
                    dockerImage = docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                    docker.build("${DOCKER_IMAGE}:latest")
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                echo 'Push de l\'image vers Docker Hub...'
                script {
                    docker.withRegistry('https://registry.hub.docker.com', DOCKER_CREDENTIALS) {
                        dockerImage.push("${DOCKER_TAG}")
                        dockerImage.push("latest")
                    }
                }
            }
        }
        
        stage('Clean up') {
            steps {
                echo 'Nettoyage des images locales...'
                sh "docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG}"
                sh "docker rmi ${DOCKER_IMAGE}:latest"
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline exécuté avec succès !'
        }
        failure {
            echo 'Le pipeline a échoué.'
        }
        always {
            cleanWs()
        }
    }
}