pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "krieger747/core-banking-app"
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        DOCKER_CREDENTIALS = 'dockerhub-credentials'
        BACKEND_DIR = 'backend'
    }

    tools {
        maven 'Maven3'
        jdk 'JDK17'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'R√©cup√©ration du code source...'
                git branch: 'main', url: 'https://github.com/Ryoukhi/gestion-bancaire.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Compilation du projet...'
                dir(BACKEND_DIR) {
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Tests unitaires') {
            steps {
                echo 'Ex√©cution des tests...'
                dir(BACKEND_DIR) {
                    bat 'mvn test'
                }
            }
            post {
                always {
                    junit "${BACKEND_DIR}/**/target/surefire-reports/*.xml"
                }
            }
        }

        stage('Analyse SonarQube') {
            steps {
                echo 'Analyse de la qualit√© du code...'
                dir(BACKEND_DIR) {
                    withSonarQubeEnv('SonarQube') {
                        bat 'mvn sonar:sonar -Dsonar.projectKey=Core-banking'
                    }
                }
            }
        }

        stage('Analyse SonarQube') {
            steps {
                echo 'Analyse de la qualit√© du code...'
                dir(BACKEND_DIR) {
                    withSonarQubeEnv('SonarQube') {
                        bat 'mvn sonar:sonar -Dsonar.projectKey=gestion-bancaire'
                        bat 'mvn sonar:sonar -Dsonar.projectKey=Core-banking'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Construction de l\'image Docker...'
                dir(BACKEND_DIR) {
                    script {
                        echo "Building image: ${DOCKER_IMAGE}:${DOCKER_TAG}"
                        
                        // V√©rifier que le Dockerfile existe
                        bat 'if not exist Dockerfile (echo ERROR: Dockerfile not found && exit 1)'
                        
                        // Build l'image
                        bat "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                        
                        // Tag comme latest
                        bat "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest"
                        
                        // V√©rifier que l'image a √©t√© cr√©√©e
                        bat "docker images ${DOCKER_IMAGE}"
                        
                        echo "‚úÖ Image Docker cr√©√©e avec succ√®s"
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo 'üöÄ Push de l\'image vers Docker Hub...'
                script {
                    withCredentials([usernamePassword(credentialsId: DOCKER_CREDENTIALS,
                            usernameVariable: 'DOCKER_USER',
                            passwordVariable: 'DOCKER_PASS')]) {
                        
                        bat "docker login -u %DOCKER_USER% -p %DOCKER_PASS%"
                        
                        echo "Pushing ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                        bat "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                        
                        echo "Pushing ${DOCKER_IMAGE}:latest..."
                        bat "docker push ${DOCKER_IMAGE}:latest"
                        
                        echo "‚úÖ Images pouss√©es avec succ√®s sur Docker Hub"
                    }
                }
            }
        }

        stage('Clean up') {
            steps {
                echo 'Nettoyage des images locales...'
                script {
                    bat "docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG} || exit 0"
                    bat "docker rmi ${DOCKER_IMAGE}:latest || exit 0"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline ex√©cut√© avec succ√®s !'
        }
        failure {
            echo 'Le pipeline a √©chou√©.'
        }
        always {
            cleanWs()
        }
    }
}