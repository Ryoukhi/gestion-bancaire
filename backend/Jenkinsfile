pipeline {
    agent any
    tools {
        maven 'Maven'
        jdk 'JDK17'
    }
    options {
        timeout(time: 90, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    environment {
        SONAR_HOST_URL = 'http://localhost:9000'
    }
    stages {
        stage('Checkout') { steps { checkout scm } }

        stage('Build') {
            steps {
                dir('backend') {
                    bat 'mvn clean compile -DskipTests'
                }
            }
        }

        stage('Tests') {
            steps {
                dir('backend') {
                    bat 'mvn test -Dspring.profiles.active=test'
                }
            }
            post {
                always {
                    dir('backend') {
                        junit '**/target/surefire-reports/*.xml'
                        jacoco execPattern: '**/target/site/jacoco.exec'
                    }
                }
            }
        }

        stage('SonarQube') {
            steps {
                dir('backend') {
                    withSonarQubeEnv('SonarQube') {
                        bat 'mvn sonar:sonar -Dsonar.projectKey=gestion-bancaire-backend'
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Package') {
            steps {
                dir('backend') {
                    bat 'mvn package -DskipTests'
                }
            }
        }
    }
    post {
        success {
            echo '✅ BUILD SUCCESS ! Artefact prêt.'
        }
        failure {
            echo '❌ BUILD ÉCHOUÉ.'
        }
        always {
            cleanWs()
        }
    }
}
