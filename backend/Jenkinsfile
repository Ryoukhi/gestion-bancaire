pipeline {
    agent any
    tools {
        maven 'Maven'
        jdk 'JDK17'
        sonarScanner 'SonarScanner'  // ← Nouveau
    }
    options { timeout(time: 90, unit: 'MINUTES') }

    stages {
        stage('Checkout') { steps { checkout scm } }
        stage('Build') {
            steps { dir('backend') { bat 'mvn clean compile' } }
        }
        stage('Tests') {
            steps {
                dir('backend') {
                    bat 'mvn test -DskipTests'
                }
            }
            post {
                always {
                    dir('backend') {
                        script {
                            if (fileExists('target/surefire-reports/*.xml')) {
                                junit '**/target/surefire-reports/*.xml'
                            }
                        }
                    }
                }
            }
        }
        stage('SonarQube') {
            steps {
                dir('backend') {
                    withSonarQubeEnv('SonarQube') {  // ← Nom exact
                        bat 'mvn sonar:sonar -Dsonar.projectKey=gestion-bancaire'
                    }
                }
            }
        }
        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        stage('Package') {
            steps { dir('backend') { bat 'mvn package -DskipTests' } }
        }
        stage('Archive') {
            steps { archiveArtifacts 'backend/target/*.jar' }
        }
    }
}
