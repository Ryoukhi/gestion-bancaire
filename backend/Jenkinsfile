pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "krieger747/core-banking-app"
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        DOCKER_CREDENTIALS = 'dockerhub-credentials'
        BACKEND_DIR = 'backend'
    }

    tools {
        maven 'Maven3'
        jdk 'JDK17'
    }

    stage('Debug workspace') {
        steps {
            bat 'cd'
            bat 'dir'
            bat 'dir backend'
        }
    }
    
    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Ryoukhi/gestion-bancaire.git'
            }
        }

        stage('Build') {
            steps {
                dir(BACKEND_DIR) {
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Tests unitaires') {
            steps {
                dir(BACKEND_DIR) {
                    bat 'mvn test'
                }
            }
            post {
                always {
                    junit "backend/**/target/surefire-reports/*.xml"
                }
            }
        }

        stage('Analyse SonarQube') {
            steps {
                dir(BACKEND_DIR) {
                    withSonarQubeEnv('SonarQube') {
                        bat 'mvn sonar:sonar -Dsonar.projectKey=gestion-bancaire'
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir(BACKEND_DIR) {
                    bat "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                    bat "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest"
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: DOCKER_CREDENTIALS,
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS')]) {

                    bat '''
                        echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker push ${DOCKER_IMAGE}:latest
                    '''
                }
            }
        }

        stage('Clean up') {
            steps {
                bat '''
                    docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG} || exit 0
                    docker rmi ${DOCKER_IMAGE}:latest || exit 0
                '''
            }
        }
    }

    post {
        success {
            echo 'Pipeline exécuté avec succès !'
        }
        failure {
            echo 'Le pipeline a échoué.'
        }
        always {
            cleanWs()
        }
    }
}