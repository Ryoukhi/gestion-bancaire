pipeline {
    agent any
    tools {
        maven 'Maven'
        jdk 'JDK17'
    }
    options {
        timeout(time: 90, unit: 'MINUTES')
    }
    environment {
        SONAR_HOST_URL = 'http://localhost:9000'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                dir('backend') {
                    bat 'mvn clean compile'
                }
            }
        }
        stage('Tests unitaires') {
            steps {
                dir('backend') {
                    echo 'Tests avec H2...'
                    bat 'mvn test -DskipTests'  // Comme local âœ…
                }
            }
            post {
                always {
                    dir('backend') {
                        junit '**/target/surefire-reports/*.xml'
                    }
                }
            }
        }
        stage('SonarQube') {
            steps {
                dir('backend') {
                    withSonarQubeEnv('SonarQube') {
                        bat 'mvn sonar:sonar -Dsonar.projectKey=gestion-bancaire-backend'
                    }
                }
            }
        }
        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        stage('Package') {
            steps {
                dir('backend') {
                    bat 'mvn package -DskipTests'
                }
            }
        }
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'backend/target/*.jar', fingerprint: true
            }
        }
    }
}
