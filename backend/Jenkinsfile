pipeline {
    agent any

    tools {
        maven 'Maven'  // Nom configuré dans Global Tool Configuration
        jdk 'JDK17'    // JDK 17 configuré dans Global Tool Configuration
    }

    environment {
        SONAR_TOKEN = credentials('sonarqube-token')  // Token créé précédemment
        SONAR_PROJECT_KEY = 'com.eadl:backend'
        SONAR_HOST_URL = 'http://localhost:9000'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test & Coverage') {
            steps {
                sh 'mvn test jacoco:report'
            }
            post {
                always {
                    jacoco(
                        execPattern: 'target/jacoco.exec'
                    )
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {  // Nom du serveur SonarQube configuré
                    sh """
                        mvn sonar:sonar \
                          -Dsonar.projectKey=\${SONAR_PROJECT_KEY} \
                          -Dsonar.host.url=\${SONAR_HOST_URL} \
                          -Dsonar.login=\${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Package') {
            when {
                allOf {
                    branch 'main'
                    expression { return env.QUALITY_GATE_STATUS == 'PASSED' }
                }
            }
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo '✅ Build réussi avec Quality Gate PASSÉ !'
        }
        failure {
            echo '❌ Build échoué ou Quality Gate échoué'
        }
    }
}
